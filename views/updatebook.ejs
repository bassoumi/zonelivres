<%- include('parts/top.ejs') %>
<br><br>
<div class="container mt-5">
    <!-- Ajouter un titre pour l'interface -->
    <h2 class="text-center mb-4">Update Book Information</h2>

    <form method="POST" action="/mybooks/update" enctype="multipart/form-data" class="p-4 shadow-sm rounded bg-light">
        <input type="hidden" name="bookId" value="<%- book.id %>">
    
        <div class="row mb-4 align-items-center">
            <div class="col-md-3 d-flex align-items-center">
                <img src="/<%= book.cover %>" alt="Book Image" class="img-thumbnail" style="width: 150px; height: auto;">
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label for="title" class="form-label">Book Title</label>
                    <input type="text" class="form-control" id="title" name="title" value="<%= book.title %>" required>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label for="author" class="form-label">Author</label>
                    <input type="text" class="form-control" id="author" name="author" value="<%= book.author %>" required>
                </div>
            </div>
        </div>
        
        <div class="form-group mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea class="form-control" id="description" name="description" rows="4" required><%= book.description %></textarea>
        </div>

        <div class="d-grid gap-2 d-flex justify-content-end">
            <button type="submit" class="btn btn-primary">Update Book</button>
        </div>
    </form>
</div>

<%- include('parts/buttom.ejs') %>
