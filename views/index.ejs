                <div></div>
            </div>
        </div>  
        <!-- ***** Preloader End ***** -->
    
    
        <!-- Page Content -->
        <!-- Banner Starts Here -->
        <div class="banner header-text">
          <div class="owl-banner owl-carousel">
            <div class="banner-item-01">
              <div class="text-content">
                <h4>Voltaire</h4>
                <h2>"L'écriture est la peinture de la voix."</h2>
              </div>
            </div>
            <div class="banner-item-02">
              <div class="text-content">
                <h4>François Mauriac</h4>
                <h2>"La lecture est une porte ouverte sur un monde enchanté"</h2>
              </div>
            </div>
         
          </div>
        </div>
        <!-- Banner Ends Here -->
    
      
  <div class="products">
    <div class="container">
      <div class="row">
    

        <div class="col-md-12">

          <div class="filters-content">

              <div class="row grid">
                <% for(let book of books){%>

                  <div class="col-lg-4 col-md-4 all des">
                    <div class="product-item">
                      <img src="/<%= book.cover %>" alt="Book Cover" >
                      <div class="down-content">
                        <a ><h4 class="text-center"><%= book.title.split(' ').map(word => word.charAt(0).toUpperCase() + word.slice(1)).join(' ') %></h4></a>
                            <p  class="text-center "><%= book.description.split(" ").slice(0, 10).join(" ") + (book.description.split(" ").length > 10 ? "..." : "") %></p>                            
                            <% if (verifuser) { %> <!-- Utilisez verifuser pour la vérification -->
                              <div class="d-flex justify-content-end">
                                <a href="/books/<%= book._id %>" class="btn btn-info mr-2">Détail</a>
                                <a class="btn btn-success" href="/<%= book.livre %>" download>Télécharger</a>
                              </div>
                            
                            <% } %>

                      </div>                    
                    </div>
                  </div>
                  <% } %>

      </div>
    </div>
  </div>

      </div>
    </div>
  </div>
  
