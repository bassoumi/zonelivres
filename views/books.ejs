<%- include('parts/top.ejs') %>

<style>.small-input {
  max-width: 200px; /* Ajustez la largeur maximale selon vos besoins */
}
.btn-primary {
    background-color: #007bff; /* Couleur de fond */
    border: none; /* Suppression de la bordure */
    transition: background-color 0.3s, transform 0.2s; /* Transition douce */
}

.btn-primary:hover {
    background-color: #0056b3; /* Couleur au survol */
    transform: scale(1.05); /* Effet de zoom au survol */
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); /* Ombre au survol */
}

.small-input {
    max-width: 200px; /* Ajustez la largeur maximale selon vos besoins */
}

</style>
<div class="page-heading products-heading header-text">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="text-content">
                    <h4>Victor Hugo</h4>
                    <h2>La lecture, une clé magique</h2>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="products">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <!-- Formulaire de recherche -->
                <div class="col-md-12 d-flex justify-content-end mb-4">
                  <!-- Formulaire de recherche -->
                  <form action="/books/search" method="GET" class="d-flex ">
                      <input type="text" name="title" class="form-control me-2 small-input" placeholder="Rechercher un livre " required>
                      <button class="btn btn-primary" type="submit">Chercher</button>
                  </form>
              </div>
              

                <div class="filters-content">
                    <div class="row grid">
                        <% for (let book of books) { %>
                            <div class="col-lg-4 col-md-4 all des">
                                <div class="product-item">
                                    <img src="/<%= book.cover %>" alt="Book Cover">
                                    <div class="down-content">
                                        <a ><h4 class="text-center"><%= book.title.split(' ').map(word => word.charAt(0).toUpperCase() + word.slice(1)).join(' ') %></h4></a>
                                        <p class="text-center"><%= book.description.split(" ").slice(0, 10).join(" ") + (book.description.split(" ").length > 10 ? "..." : "") %></p>
                                        <div class="d-flex justify-content-end">
                                            <a href="/books/<%= book._id %>" class="btn btn-info mr-2">Détail</a>
                                            <a class="btn btn-success" href="/<%= book.livre %>" download>Télécharger</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('parts/buttom.ejs') %>
